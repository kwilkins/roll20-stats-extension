{
	"manifest_version": 2,
	"name": "Roll20 Dice Stats",
	"version": "0.0.2",
	
	"default_locale": "en",
	"description": "Calculates dice roll stats from Roll20 game chat",
	"icons": {
		"48": "48icon.png",
		"128": "128icon.png"
	},
	
	"browser_action": {
		"default_title": "Roll20 Dice Stats",
		"default_popup": "popup.html"
	},

	"permissions": [ "activeTab" ]
}
